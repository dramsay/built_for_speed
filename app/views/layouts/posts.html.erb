	<%= stylesheet_link_tag "blueprint/ie", :media => "screen, projection" %>
  <![endif]-->
  <%= stylesheet_link_tag "base", :media => "screen, projection" %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
	<div class="container">
		<p style="color: green"><%= flash[:notice] %></p>
	    <%= yield %>
	</div>
</body>
</html>
